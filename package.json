{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.ts",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "cross-env NODE_ENV=development npx ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "prepare:prod": "npm i && npm run build && rm -rf node_modules && npm i --omit=dev",
    "start": "cross-env NODE_ENV=production node -r tsconfig-paths/register dist/src/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeRush-App/Backend.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/CodeRush-App/Backend#readme",
  "dependencies": {
    "@prisma/client": "6.10.0",
    "apicache": "^1.6.3",
    "bcrypt": "5.1.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "joi": "17.9.2",
    "joi-to-swagger": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "6.10.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/apicache": "^1.6.7",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "prettier": "^3.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}