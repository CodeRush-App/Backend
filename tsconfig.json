{
  "compilerOptions": {
    // Use modern ECMAScript features
    "target": "ES2020",
    // CommonJS module system for Node.js
    "module": "CommonJS",
    // Output directory for compiled JS
    "outDir": "./dist",
    // Enable all strict type-checking options
    "strict": true,
    // Disallow implicit any types
    "noImplicitAny": true,
    // Allow default imports from modules with no default export
    "esModuleInterop": true,
    // Allow importing .json files
    "resolveJsonModule": true,
    // Node types for Node.js environment
    "types": ["node", "jest"],
    // Path alias for Prisma
    "baseUrl": ".",
    "paths": {
      "@prisma": ["generated/prisma"]
    }
  },
  "include": ["src/**/*", "src/types/**/*"]
}
